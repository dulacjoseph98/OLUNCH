<div class="container pt-2 pb-5">
  <h1 id="event">My Events</h1>
  <div class="container-dash">
    <h2>Waiting for your answer</h2>
    
    <% if  @pending_events.present? %>
      <% @pending_events.each do |event| %>
        <div class="card-pending"><%= event.location.name %> at 
          <%= event.start_at.strftime('%b %e, %l:%M %p') %>, 
          from <%= event.user.nickname %>
          <div class="validates">
          <%= link_to "✅", accept_attendee_path(event.attendees.find_by(user_id: current_user.id)), class: "accept"%>
          <%= link_to "❌", decline_attendee_path(event.attendees.find_by(user_id: current_user.id)), class: "decline"%>
          </div>
        </div>
      <% end %>
    <% else %>
      <p id="anim-pop">Nobody likes you... 😓</p>
    <% end %>
    
    <br><br>
    <h2>upcoming events</h2>
    <% @events.each do |event| %>
      <div class="card-event"><%= event.location.name %> at <%= event.start_at.strftime('%b %e, %l:%M %p') %>, with <%= event.user.nickname %></div>
    <% end %>
  </div>
</div>

