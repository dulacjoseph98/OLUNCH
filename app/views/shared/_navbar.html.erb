<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <i class="fas fa-bars color-green font-size-40px"></i>
  </button>


  <div class="collapse navbar-collapse bg-white" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>




        <li class="nav-item active">
          <%= link_to entity_locations_path(current_user.entities.first), class: "nav-link" do %>
          <!-- <#%= link_to entity_locations_path(@location.entity),  class: "nav-link" do %> -->
            <i class="fas fa-map-marked color-green font-size-40px"></i>
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to dashboard_path, class: "nav-link" do %>
            <i class="fas fa-calendar color-green font-size-40px"></i>
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to new_entity_location_path(current_user.entities.first), class: "nav-link" do %>
            <i class="fas fa-plus-square color-green font-size-40px"></i>
          <% end %>
        </li>


        <li class="nav-item active">
          <%= link_to root_path, class: "nav-link" do %>
            <i class="fas fa-building color-green font-size-40px"></i>
          <% end %>
        </li>

         <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>

      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
