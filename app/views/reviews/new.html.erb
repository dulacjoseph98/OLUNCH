<div class="location-new">
  <div class="container <!-- fixed-bottom -->">
    <%= simple_form_for [@location, @review] do |f| %>
  <%= f.input :comment,
      label: false,
      placeholder: 'Type in your comment',
      input_html: { class: 'olunch-input' } %>
    <%= f.input :rating,
      label: false,
      as: :radio_buttons,
      collection: 1..5 %>
    <%= f.submit "Add a comment", class: "button-green" %>
  <% end %>

  </div>
</div>
