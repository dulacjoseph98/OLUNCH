<div class="container">

  <div class="mt-2">
    <div class="form-header d-flex flex-column justify-content-center">
      <div class="text-center">Welcome to the Party</div>
    </div>

    <%= simple_form_for [@location, @event] do |f| %>

      <%= f.input :public, as: :boolean,
      input_html: { class: "toggle", id: "public-btn" } %>

      <span id="invitation">
        <%= simple_fields_for :invitations do |x| %>
          <%= x.input :attendees,
          collection: User.all.map { |user| ["#{user.firstname} #{user.lastname}", user.id]},
          input_html: { class: "select2", multiple: true } %>
        <% end %>
      </span>
      <%= f.input :start_at,
      label: "Event Time",
      as: :string,
      input_html: { class: 'datepicker' } %>
      <%= f.submit "Create Event", class: "button-green" %>


      <div class="link-to fixed-bottom">
        <%= link_to "Back to Map", entity_locations_path(@location.entity), class: "back-btn" %>
        <%= link_to "My Event Dashboard", dashboard_entity_path, class: "review-btn" %>
      </div>

    <% end %>
  </div>
</div>

