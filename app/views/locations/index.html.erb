<div id="map"
     style="width: 100%; height: 100vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
     <% @locations.each do |loc| %>
      <div id="location-<%= loc.id %>" class="location-show d-none">
        <%= image_tag 'https://media-cdn.tripadvisor.com/media/photo-s/0d/bf/f1/66/la-fabrica.jpg' %>
        <div class="location-show__details">
          <h2><%= loc.name %></h2>
          <%= loc.address %>
          <%= link_to location_path(loc) do  %>
            <i class="fas fa-comment-dots"></i>
          <% end %>
          <%= link_to 'Book a table', location_events_path(loc), class: "button" %>
        </div>
      </div>
     <% end %>
</div>
