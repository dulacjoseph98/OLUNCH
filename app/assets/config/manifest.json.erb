{
  "background_color": "white",
  "description": "O'Lunch is an app that let you rate and organize lunch with your school/company or association.",
  "display": "fullscreen",
  "name": "O'Lunch",
  "icons": [
    <% files = Dir.entries(Rails.root.join("app/assets/images/")).select {|f| !File.directory? f} %>
    <% files.each_with_index do |file, index| %>
      <% match = file.match(/.+-(?<size>\d{2,3}x\d{2,3}).png/) %>
      {
        "src": "<%= image_path file %>",
        "sizes": "<%= match && match[:size] %>",
        "type": "image/png"
      }<%= "," unless (files.size - 1) == index %>
    <% end %>
  ]
}